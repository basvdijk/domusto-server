{
  "name": "domusto-server",
  "version": "0.0.1",
  "description": "Node home automation rest API for RPI",
  "main": "build/server.js",
  "scripts": {
    "assets": "cp -r ./src/assets ./build",
    "test": "./node_modules/mocha/bin/mocha $(find ./src -not -iwholename '*AppleDouble*' -name '*.spec.ts')",
    "start": "npx tsc && node ./build/app.js",
    "dev": "mkdir -p logs && npm run assets && npx tsc-watch -p tsconfig.json --onSuccess \"node ./build/app.js\""
  },
  "author": "Bas van Dijk",
  "license": "UNLICENSED",
  "dependencies": {
    "express": "^4.15.3",
    "fs": "0.0.1-security",
    "jsonfile": "^4.0.0",
    "marantz-avr": "^1.1.0",
    "node-schedule": "^1.2.5",
    "openzwave-shared": "^1.4.0",
    "prettyjson": "^1.2.1",
    "pushbullet": "^2.1.0",
    "rfxcom": "^1.0.3",
    "socket.io": "^2.0.3",
    "suncalc": "^1.8.0"
  },
  "devDependencies": {
    "@types/express": "^4.11.0",
    "@types/mocha": "^2.2.45",
    "@types/node": "^8.5.2",
    "@types/should": "^13.0.0",
    "@types/sinon": "^4.1.2",
    "@types/socket.io": "^1.4.31",
    "mocha": "^4.1.0",
    "mocha-typescript": "^1.1.12",
    "mock-require": "^2.0.2",
    "nodemon": "^1.14.7",
    "should": "^13.2.0",
    "sinon": "^4.1.3",
    "source-map-support": "^0.5.0",
    "tsc-watch": "^1.0.6",
    "tslint": "^5.8.0",
    "tslint-eslint-rules": "^4.1.1",
    "typescript": "^2.6.2"
  },
  "directories": {
    "doc": "doc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/basvdijk/domusto-server.git"
  },
  "keywords": [
    "domusto",
    "home",
    "automation",
    "domotica"
  ],
  "bugs": {
    "url": "https://github.com/basvdijk/domusto-server/issues"
  },
  "homepage": "https://github.com/basvdijk/domusto-server#readme"
}
