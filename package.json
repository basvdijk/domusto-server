{
  "name": "domusto-server",
  "version": "0.0.1",
  "description": "Node home automation rest API for RPI",
  "main": "build/server.js",
  "scripts": {
    "assets": "cp -r ./src/assets ./build",
    "test": "./node_modules/mocha/bin/mocha $(find ./src -not -iwholename '*AppleDouble*' -name '*.spec.ts')",
    "start": "npm run assets && ./node_modules/.bin/tsc-watch -p tsconfig.json --onSuccess \"node ./build/app.js\""
  },
  "author": "Bas van Dijk",
  "license": "UNLICENSED",
  "dependencies": {
    "express": "^4.15.3",
    "socket.io": "^2.0.3",
    "suncalc": "^1.8.0"
  },
  "devDependencies": {
    "@types/express": "^4.0.37",
    "@types/mocha": "^2.2.43",
    "@types/node": "^8.0.28",
    "@types/should": "^11.2.0",
    "@types/sinon": "^2.3.4",
    "@types/socket.io": "^1.4.30",
    "mocha": "^3.5.3",
    "mocha-typescript": "^1.1.8",
    "mock-require": "^2.0.2",
    "nodemon": "^1.11.0",
    "should": "^12.0.0",
    "sinon": "^3.2.1",
    "source-map-support": "^0.4.18",
    "tsc-watch": "^1.0.6",
    "tslint": "^5.7.0",
    "tslint-eslint-rules": "^4.1.1",
    "typescript": "^2.5.2"
  }
}
